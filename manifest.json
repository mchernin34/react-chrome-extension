{
  "manifest_version": 2,

  "name": "Basic React Chrome Extension",
  "description": "A very basic Chrome extension built with React.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["src/build/main.js"]
  }]
}